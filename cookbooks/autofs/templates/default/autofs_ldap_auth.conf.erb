<?xml version="1.0" ?>
<!--
This files contains a single entry with multiple attributes tied to it.
See autofs_ldap_auth.conf(5) for more information.
-->

<autofs_ldap_sasl_conf
	usetls="no"
	tlsrequired="no"

        <!-- by Chef --> 
        <% if node['autofs']['krb5'] %>
	authrequired="yes"
        authtype="GSSAPI"
        clientprinc="host/<%= node['autofs']['fqdn'] %>@<%= node['autofs']['domain'].upcase %>"
        <% else %>
	authrequired="no"
        <% end %>
/>
